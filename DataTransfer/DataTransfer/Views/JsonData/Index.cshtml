<!---------------------------scripts------------------------------------->
    
    <script>
    $(document).ready(function () {
        $('#btnone').click(function () {
            $.ajax({
                type: 'get',
                url: '/jsondata/getjson',
                dataType: 'json',
                success: function (data) {
                    $('#dataone').empty();//clear content of #dataone
                    $('#dataone').html("userName:" + data.userName + "<br/>" + "Age:" + data.age);
                    //alert(data.userName);
                }
            });
        });

        $('#btnthree').click(function () {
            $.ajax({
                type:'post',
                url: '/jsondata/getjsonfile',
                dataType: 'json',
                success: function (data) {
                    if (!data)
                        alert("null");                   
                    var str = data ;
                    var sitearr = "";
                    //alert("aa");
                    $.each(str.sites, function (i,item) {//遍历json数组
                        sitearr += item.Name + "<br/>";
                    });
                    
                    $('#datathree').html("Name:" + sitearr);
                    alert("success");
                },
                error: function () {
                    alert("error");
                }
            });
            //alert("aaa");
        });
        
        $("#btn").click(function () {
            $.ajax({
                type: 'post',
                url: '/jsondata/getjsonfile',
                success: function (data) {
                    var str = eval("(" + data + ")");
                    var sitearr = "";
                    var len = str.sites.length;
                    for (var i = 0; i < len; i++) {
                        sitearr += str.sites[i].Name + "<br />";
                    }
                    $("#datathree").html(sitearr);
                }
            });
        });
       
        $('#btnfour').click(function () {
            var obj = {
                parm1: 100,
                parm2: "我是string",
                parm3: true,
                parm4: 1.23,
                parm5: 9.999999
            };
            $.getJSON('/jsondata/SimpleBaseData', obj, function (data) {
                //var jsonobj = JSON.parse(data);
                //var str = eval("(" + data + ")");
                //alert(str);
                var str = "";
                $.each(data, function (i, item) {
                    str += item+" ";
                });
                alert(str);
            });
        });

        $('#btnfive').click(function () {
            var obj = {
                UserName: '张三',
                UserPassWord: '不告诉你',
                UserSex: '男',
                UserPhone: '138888888888'
            };
            $.getJSON('/jsondata/GetSingleObject', obj, function (data) {
                //var jsonobj = JSON.parse(data);
                //alert(jsonobj.UserName);
                var str = eval("(" + data + ")");
                var message = "";
                $.each(str, function (i, item) {
                    message+=item+"\n"
                });
                alert(message);
            });
        });
    });
    </script>

    <script>
        $(function () {
            $('#btntwo').click(function () {
                $.ajax({
                    type:'post',
                    url: '/jsondata/getjsondata',
                    dataType: 'json',
                    success: function (data) {
                        $('#datatwo').empty();
                        var userName = data.userName;
                        var age = data.age;
                        $('#datatwo').html("userName:" + userName + "<br/>" + "Age:" + age);
                        //alert(userName);
                    },
                    error: function () {
                        alert("error");
                    }
                });
            });
          
            $('#btnsix').click(function () {
                var userinfoObj = {
                    UserName: '张三',
                    UserPassWord: '不告诉你',
                    UserSex: '男',
                    UserPhone: '138888888888'
                };
                var addressObj = {
                    Country: '中国',
                    Province: '江西',
                    City: '南昌',
                    Street: '红谷滩新区XX路XX号'
                };
                $.ajax({
                    url: '/jsondata/GetTwoObject',
                    type: 'post',//换成 get 无效
                    contentType: 'application/json',//多对象传送这个很重要
                    data: JSON.stringify({
                        userinfo: userinfoObj,
                        address: addressObj
                    }),
                    success: function (data) {
                        alert("不使用ViewModel:" + data);
                    }
