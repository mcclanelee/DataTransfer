<body>
    <div> 
        <button id="btnone">jsonresult方式获取json数据</button>
        <p id="dataone"></p>
    </div><hr />

    <div>
        <button id="btntwo">contentresult方式获取json数据</button>
        <p id="datatwo"></p>
    </div><hr />

   <div>
       <button id="btnthree">从json文件获取</button>
       <p id="datathree"></p>
   </div><hr />

   <div>
       <button id="btnfour">传送基本数据类型</button>
   </div><hr />

